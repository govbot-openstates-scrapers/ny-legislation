{"legislative_session": "2025-2026", "identifier": "A5054", "title": "Relates to the payment of fees allowed for representation in unemployment compensation cases", "from_organization": "~{\"classification\": \"lower\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Allows approved claims of representatives for services rendered to a claimant in connection with an unemployment insurance claim to become a lien upon the benefit allowed; criminalizes certain violations relating to other forms of compensation in connection with an unemployment insurance claim; provides that a fee allowed shall be on a contingency basis and be equal to fifteen percent of the amount of the benefits to be paid to the claimant at the conclusion of services rendered."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "REFERRED TO LABOR", "date": "2025-02-11", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["referral-committee"], "related_entities": [{"name": "LABOR", "entity_type": "organization", "organization_id": null}]}], "sponsorships": [{"name": "Jonathan Jacobson", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"name\": \"Jonathan Jacobson\"}", "organization_id": null}, {"name": "Steve Stern", "classification": "cosponsor", "entity_type": "person", "primary": false, "person_id": "~{\"name\": \"Steve Stern\"}", "organization_id": null}], "related_bills": [{"identifier": "A 5838", "legislative_session": "2023-2024", "relation_type": "prior-session"}], "versions": [{"note": "A5054", "links": [{"url": "http://assembly.state.ny.us/leg/?sh=printbill&bn=A5054&term=2025&Text=Y", "media_type": "text/html"}, {"url": "http://legislation.nysenate.gov/pdf/bills/2025/A5054", "media_type": "application/pdf"}], "date": "", "classification": ""}], "documents": [], "citations": [], "sources": [{"url": "https://legislation.nysenate.gov/api/3/bills/2025-2026/A5054?summary=&de
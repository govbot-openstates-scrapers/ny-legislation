{"legislative_session": "2025-2026", "identifier": "S1698", "title": "Enacts the \"standing is tiring (sit) act\"", "from_organization": "~{\"classification\": \"upper\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Enacts the \"standing is tiring (sit) act\"; requires employers to provide suitable seats to all employees where the nature of such employees' work reasonably permits seated work; prohibits employers from artificially designing a work space to require standing; requires the department of labor to determine whether the nature of work reasonably permits seated work; creates a private right of action for employees whose employer does not provide seats."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "REFERRED TO LABOR", "date": "2025-01-13", "organization_id": "~{\"classification\": \"upper\"}", "classification": ["referral-committee"], "related_entities": [{"name": "LABOR", "entity_type": "organization", "organization_id": null}]}], "sponsorships": [{"name": "Rachel May", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"name\": \"Rachel May\"}", "organization_id": null}, {"name": "Kristen Gonzalez", "classification": "cosponsor", "entity_type": "person", "primary": false, "person_id": "~{\"name\": \"Kristen Gonzalez\"}", "organization_id": null}, {"name": "Robert Jackson", "classification": "cosponsor", "entity_type": "person", "primary": false, "person_id": "~{\"name\": \"Robert Jackson\"}", "organization_id": null}, {"name": "Jessica Ramos", "classification": "cosponsor", "entity_type": "person", "primary": false, "person_id": "~{\"name\": \"Jessica Ramos\"}", "organization_id": null}], "related_bills": [{"identifier": "A 4148", "legislative_session": "2025-2026", "relation_type": "companion"}, {"identifier": "A 4148", "legislative_session": "2025-2026", "relation_type": "companion"}, {"identifier": "S 1997", "legislative_session": "2023-2024", "r
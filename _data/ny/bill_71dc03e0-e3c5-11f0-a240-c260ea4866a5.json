{"legislative_session": "2025-2026", "identifier": "A6637", "title": "Enacts the quiet hour public spaces inclusion act", "from_organization": "~{\"classification\": \"lower\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Enacts the \"quiet hour public spaces inclusion act\"; provides that every covered public building shall offer designated quiet hours during normal business hours; defines \"quiet hours\" as accommodations made for individuals with autism, post-traumatic stress disorder, sensory processing disorders and other related conditions during a designated time including reduced lighting, lower noise levels and limited use of loudspeakers and announcements."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "REFERRED TO GOVERNMENTAL OPERATIONS", "date": "2025-03-06", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["referral-committee"], "related_entities": [{"name": "GOVERNMENTAL OPERATIONS", "entity_type": "organization", "organization_id": null}]}], "sponsorships": [{"name": "Angelo Santabarbara", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"name\": \"Angelo Santabarbara\"}", "organization_id": null}], "related_bills": [], "versions": [{"note": "A6637", "links": [{"url": "http://assembly.state.ny.us/leg/?sh=printbill&bn=A6637&term=2025&Text=Y", "media_type": "text/html"}, {"url": "http://legislation.nysenate.gov/pdf/bills/2025/A6637", "media_type": "application/pdf"}], "date": "", "classification": ""}], "documents": [], "citations": [{"publication": "New York Laws", "citation": "PBB \u00a7 148", "citation_type": "proposed", "effective": null, "expires": null, "url": "https://www.nysenate.gov/legislation/laws/PBB/"}], "sources": [{"url": "https://legislation.nysenate.gov/api/3/bills/2025-2026/A6637?summary=&detail=", "note": ""}, {"url": "http://www.nysenate.gov/legislation/bills/2025/A6637", "note": ""}, {"url": "https:/
{"legislative_session": "2025-2026", "identifier": "S7436", "title": "Relates to the provision of legal representation to certain persons in eviction, ejectment and foreclosure proceedings", "from_organization": "~{\"classification\": \"upper\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Requires counties and/or cities to establish a plan for providing legal counsel to persons who are defendants or respondents in eviction, ejectment and foreclosure proceedings and who are financially unable to obtain counsel; defines eligible person as one whose gross individual income is not in excess of one hundred twenty-five percent of the federal income official poverty line; requires the state to match dollar for dollar the amount counties appropriate for their plans."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "REFERRED TO LOCAL GOVERNMENT", "date": "2025-04-16", "organization_id": "~{\"classification\": \"upper\"}", "classification": ["referral-committee"], "related_entities": [{"name": "LOCAL GOVERNMENT", "entity_type": "organization", "organization_id": null}]}], "sponsorships": [{"name": "Brad Hoylman-Sigal", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"name\": \"Brad Hoylman-Sigal\"}", "organization_id": null}, {"name": "Kevin S. Parker", "classification": "cosponsor", "entity_type": "person", "primary": false, "person_id": "~{\"name\": \"Kevin S. Parker\"}", "organization_id": null}, {"name": "Jessica Ramos", "classification": "cosponsor", "entity_type": "person", "primary": false, "person_id": "~{\"name\": \"Jessica Ramos\"}", "organization_id": null}, {"name": "Julia Salazar", "classification": "cosponsor", "entity_type": "person", "primary": false, "person_id": "~{\"name\": \"Julia Salazar\"}", "organization_id": null}], "related_bills": [{"identifier": "A 162", "legislative_session": "2025-2026", "relation_type": "companion"}, {"identifier": "A 162"
{"legislative_session": "2025-2026", "identifier": "A7102", "title": "Relates to unfair claim settlement practices", "from_organization": "~{\"classification\": \"lower\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Provides that an insurer doing business in this state shall be liable to a policy holder for such insurer's refusal to pay or unreasonable delay of payment to the policy holder if such refusal or delay was not substantially justified; enumerates instances whereby an insurer's refusal or delay of payment is not substantially justified including intentional negligence, failure to act in good faith, failure to provide written denial of claim, failure to make final determination of claim within six months, and failure to promptly proceed with the appraisal process."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "REFERRED TO INSURANCE", "date": "2025-03-20", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["referral-committee"], "related_entities": [{"name": "INSURANCE", "entity_type": "organization", "organization_id": null}]}], "sponsorships": [{"name": "Rodneyse Bichotte Hermelyn", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"name\": \"Rodneyse Bichotte Hermelyn\"}", "organization_id": null}, {"name": "Vivian Cook", "classification": "cosponsor", "entity_type": "person", "primary": false, "person_id": "~{\"name\": \"Vivian Cook\"}", "organization_id": null}, {"name": "William Colton", "classification": "cosponsor", "entity_type": "person", "primary": false, "person_id": "~{\"name\": \"William Colton\"}", "organization_id": null}, {"name": "Rebecca Seawright", "classification": "cosponsor", "entity_type": "person", "primary": false, "person_id": "~{\"name\": \"Rebecca Seawright\"}", "organization_id": null}, {"name": "Linda Rosenthal", "classification": "cosponsor", "entity_type": "person", "primary": false, "person_id"
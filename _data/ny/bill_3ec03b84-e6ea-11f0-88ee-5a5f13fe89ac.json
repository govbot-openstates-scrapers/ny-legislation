{"legislative_session": "2025-2026", "identifier": "S3059", "title": "Prohibits any party from charging consumers for unordered or unrequested goods or services; repealer", "from_organization": "~{\"classification\": \"upper\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Prohibits any person, firm, partnership, association or corporation, or agent or employee thereof from offering for sale tangible or intangible goods or services which have not been actually ordered or requested by the recipient; provides that any receipt of unordered goods shall be deemed a gift to the recipient; prohibits the requesting of payment for unordered goods and services; makes related provisions including prohibiting the recipient from waiving any of their rights hereunder."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "REFERRED TO CONSUMER PROTECTION", "date": "2025-01-23", "organization_id": "~{\"classification\": \"upper\"}", "classification": ["referral-committee"], "related_entities": [{"name": "CONSUMER PROTECTION", "entity_type": "organization", "organization_id": null}]}], "sponsorships": [{"name": "Leroy Comrie", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"name\": \"Leroy Comrie\"}", "organization_id": null}], "related_bills": [{"identifier": "S 1549", "legislative_session": "2023-2024", "relation_type": "prior-session"}, {"identifier": "S 3785", "legislative_session": "2021-2022", "relation_type": "prior-session"}, {"identifier": "S 747", "legislative_session": "2019-2020", "relation_type": "prior-session"}, {"identifier": "S 4447", "legislative_session": "2017-2018", "relation_type": "prior-session"}, {"identifier": "S 3245", "legislative_session": "2015-2016", "relation_type": "prior-session"}, {"identifier": "S 1385", "legislative_session": "2013-2014", "relation_type": "prior-session"}, {"identifier": "S 336", "legislative_session": "2011-2012", "relation_typ
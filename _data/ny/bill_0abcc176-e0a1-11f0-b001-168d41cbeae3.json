{"legislative_session": "2025-2026", "identifier": "S6853", "title": "Prohibits unsolicited telemarketing sales calls during certain declared states of emergency", "from_organization": "~{\"classification\": \"upper\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Prohibits unsolicited telemarketing sales calls during a declared state of emergency or disaster emergency where the declaration or proclamation of emergency includes a finding that unsolicited telemarketing sales calls would impair actions taken to limit, control, or mitigate the emergency; explains the basis of such finding; provides that such prohibition may not extend for a period of more than two weeks, subject to renewal for additional two-week periods by further findings of necessity made at the end of each two-week period."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "REFERRED TO CONSUMER PROTECTION", "date": "2025-03-25", "organization_id": "~{\"classification\": \"upper\"}", "classification": ["referral-committee"], "related_entities": [{"name": "CONSUMER PROTECTION", "entity_type": "organization", "organization_id": null}]}], "sponsorships": [{"name": "Joseph P. Addabbo Jr.", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"name\": \"Joseph P. Addabbo Jr.\"}", "organization_id": null}, {"name": "Patricia Canzoneri-Fitzpatrick", "classification": "cosponsor", "entity_type": "person", "primary": false, "person_id": "~{\"name\": \"Patricia Canzoneri-Fitzpatrick\"}", "organization_id": null}], "related_bills": [{"identifier": "A 1250", "legislative_session": "2025-2026", "relation_type": "companion"}, {"identifier": "A 1250", "legislative_session": "2025-2026", "relation_type": "companion"}, {"identifier": "S 412", "legislative_session": "2023-2024", "relation_type": "prior-session"}, {"identifier": "S 7656", "legislative_session": "2021-2022", "relation_type": "prior-session"}], "versions"
{"legislative_session": "2025-2026", "identifier": "S1575", "title": "Provides that certain real property tax exemptions shall only be granted where such property is actually used for certain enumerated purposes", "from_organization": "~{\"classification\": \"upper\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Provides that real property tax exemptions granted to real property owned by corporations or associations organized or conducted exclusively for hospital or for purposes related to the moral or mental improvement of men, women, or children and used exclusively for carrying out such purposes shall only be granted if the property owner can prove by clear and convincing evidence that each acre is actually used for such purpose at least 120 days a year."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "REFERRED TO LOCAL GOVERNMENT", "date": "2025-01-10", "organization_id": "~{\"classification\": \"upper\"}", "classification": ["referral-committee"], "related_entities": [{"name": "LOCAL GOVERNMENT", "entity_type": "organization", "organization_id": null}]}], "sponsorships": [{"name": "George Borrello", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"name\": \"George Borrello\"}", "organization_id": null}], "related_bills": [{"identifier": "S 4672", "legislative_session": "2023-2024", "relation_type": "prior-session"}, {"identifier": "S 1951", "legislative_session": "2021-2022", "relation_type": "prior-session"}, {"identifier": "S 2609", "legislative_session": "2019-2020", "relation_type": "prior-session"}, {"identifier": "S 995", "legislative_session": "2017-2018", "relation_type": "prior-session"}, {"identifier": "S 1373", "legislative_session": "2015-2016", "relation_type": "prior-session"}, {"identifier": "S 881", "legislative_session": "2013-2014", "relation_type": "prior-session"}, {"identifier": "S 2552", "legislative_session": "2011-2012", "relation
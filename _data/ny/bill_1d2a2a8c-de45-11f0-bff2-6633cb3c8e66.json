{"legislative_session": "2025-2026", "identifier": "A1540", "title": "Relates to requiring certain child passengers in a taxi or livery to be restrained by a child restraint system", "from_organization": "~{\"classification\": \"lower\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Requires that no person under four years of age shall be a passenger in a taxi or livery unless such person is restrained by a child restraint system; requires that no person four years of age or older but under age eight shall be a passenger in a taxi or livery unless such person is restrained in an appropriate child restraint system; establishes violations of such provisions shall be punished by a civil fine of up to fifty dollars."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "REFERRED TO TRANSPORTATION", "date": "2025-01-10", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["referral-committee"], "related_entities": [{"name": "TRANSPORTATION", "entity_type": "organization", "organization_id": null}]}], "sponsorships": [{"name": "Amy Paulin", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"name\": \"Amy Paulin\"}", "organization_id": null}, {"name": "William Colton", "classification": "cosponsor", "entity_type": "person", "primary": false, "person_id": "~{\"name\": \"William Colton\"}", "organization_id": null}, {"name": "Rebecca Seawright", "classification": "cosponsor", "entity_type": "person", "primary": false, "person_id": "~{\"name\": \"Rebecca Seawright\"}", "organization_id": null}, {"name": "David McDonough", "classification": "cosponsor", "entity_type": "person", "primary": false, "person_id": "~{\"name\": \"David McDonough\"}", "organization_id": null}], "related_bills": [{"identifier": "S 2265", "legislative_session": "2025-2026", "relation_type": "companion"}, {"identifier": "S 2265", "legislative_session": "2025-2026", "relation_type": "c
{"legislative_session": "2025-2026", "identifier": "S6490", "title": "Enacts the \"state taxpayer oversight and protection (STOP) act\"", "from_organization": "~{\"classification\": \"upper\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Enacts the \"state taxpayer oversight and protection (STOP) act\"; relates to the payment of attorneys' fees by the state; provides that no attorneys' fees or expenses shall be paid if incurred on behalf of an employee in any action brought by the employee against the state; provides that attorneys' fees shall be presumptively unreasonable where an individual hires or employs multiple law firms on the same matter unless such employee can demonstrate the need for additional attorneys with distinct subject matter expertise."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "REFERRED TO INVESTIGATIONS AND GOVERNMENT OPERATIONS", "date": "2025-03-14", "organization_id": "~{\"classification\": \"upper\"}", "classification": ["referral-committee"], "related_entities": [{"name": "INVESTIGATIONS AND GOVERNMENT OPERATIONS", "entity_type": "organization", "organization_id": null}]}, {"description": "AMEND AND RECOMMIT TO INVESTIGATIONS AND GOVERNMENT OPERATIONS", "date": "2025-03-28", "organization_id": "~{\"classification\": \"upper\"}", "classification": ["amendment-passage", "referral-committee"], "related_entities": []}, {"description": "PRINT NUMBER 6490A", "date": "2025-03-28", "organization_id": "~{\"classification\": \"upper\"}", "classification": ["amendment-passage"], "related_entities": []}], "sponsorships": [{"name": "Liz Krueger", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"name\": \"Liz Krueger\"}", "organization_id": null}, {"name": "Jessica Ramos", "classification": "cosponsor", "entity_type": "person", "primary": false, "person_id": "~{\"name\": \"Jessica Ramos\"}", "organization_id": null}, {"name": "Gustavo Rivera
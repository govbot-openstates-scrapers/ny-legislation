{"legislative_session": "2025-2026", "identifier": "A7072", "title": "Entitles senior citizens to a refund of any security deposit exceeding one month's rent", "from_organization": "~{\"classification\": \"lower\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Limits the amount of security deposit for residential rental premises which may be charged to a senior citizen who has occupied the premises for five years or more to the equivalent of one month's rent; entitles a person who has attained the age of sixty-two to a refund of that portion of any security deposit held by the landlord which exceeds one month's rent."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "REFERRED TO JUDICIARY", "date": "2025-03-20", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["referral-committee"], "related_entities": [{"name": "JUDICIARY", "entity_type": "organization", "organization_id": null}]}], "sponsorships": [{"name": "J. Gary Pretlow", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"name\": \"J. Gary Pretlow\"}", "organization_id": null}], "related_bills": [{"identifier": "A 4644", "legislative_session": "2023-2024", "relation_type": "prior-session"}, {"identifier": "A 1710", "legislative_session": "2021-2022", "relation_type": "prior-session"}, {"identifier": "A 1817", "legislative_session": "2019-2020", "relation_type": "prior-session"}, {"identifier": "A 2576", "legislative_session": "2017-2018", "relation_type": "prior-session"}, {"identifier": "A 2240", "legislative_session": "2015-2016", "relation_type": "prior-session"}, {"identifier": "A 585", "legislative_session": "2013-2014", "relation_type": "prior-session"}, {"identifier": "A 2394", "legislative_session": "2011-2012", "relation_type": "prior-session"}, {"identifier": "A 4405", "legislative_session": "2009-2010", "relation_type": "prior-session"}, {"identifier": "A 6526", "legislati
{"legislative_session": "2025-2026", "identifier": "S3878", "title": "Provides that liquor authority may include certain terms and conditions as part of various licenses for on-premises consumption to assure premises lawfully operated", "from_organization": "~{\"classification\": \"upper\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Provides that the state liquor authority may, with the consent of the applicant, include certain terms and conditions as part of various licenses for on-premises consumption of beer and liquor for the purpose of assuring that the licensed premises are operated in accordance with law and consistent with the public interest; provides that prior to including terms and conditions in a license, the authority shall consult with the applicant and any party entitled to receive notice of the application; provides that the terms and conditions shall be legally enforceable in the same manner as applicable provisions of this chapter or regulations of the authority."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "REFERRED TO COMMERCE, ECONOMIC DEVELOPMENT AND SMALL BUSINESS", "date": "2025-01-30", "organization_id": "~{\"classification\": \"upper\"}", "classification": ["referral-committee"], "related_entities": [{"name": "COMMERCE, ECONOMIC DEVELOPMENT AND SMALL BUSINESS", "entity_type": "organization", "organization_id": null}]}], "sponsorships": [{"name": "Brad Hoylman-Sigal", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"name\": \"Brad Hoylman-Sigal\"}", "organization_id": null}, {"name": "Luis R. Sep\u00falveda", "classification": "cosponsor", "entity_type": "person", "primary": false, "person_id": "~{\"name\": \"Luis R. Sep\\u00falveda\"}", "organization_id": null}], "related_bills": [{"identifier": "S 2603", "legislative_session": "2023-2024", "relation_type": "prior-session"}, {"identifier": "S 474", "legislative_session": "2021-
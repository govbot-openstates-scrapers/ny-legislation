{"legislative_session": "2025-2026", "identifier": "S675", "title": "Prohibits the transportation of dogs in the back of a motor vehicle intended for any load", "from_organization": "~{\"classification\": \"upper\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Prohibits the transportation of dogs in the back of a motor vehicle intended for any load unless such space is enclosed or has side and tail racks to a height of not less than forty-six inches extending vertically from the floor; the motor vehicle has installed means of preventing the dog from being ejected; or the dog is cross-tethered to the vehicle or is protected by a secured container or cage, in a manner which will prevent the dog from being ejected from the motor vehicle; imposes fines for violations."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "REFERRED TO TRANSPORTATION", "date": "2025-01-08", "organization_id": "~{\"classification\": \"upper\"}", "classification": ["referral-committee"], "related_entities": [{"name": "TRANSPORTATION", "entity_type": "organization", "organization_id": null}]}], "sponsorships": [{"name": "Monica Martinez", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"name\": \"Monica Martinez\"}", "organization_id": null}], "related_bills": [{"identifier": "S 9657", "legislative_session": "2023-2024", "relation_type": "prior-session"}], "versions": [{"note": "S675", "links": [{"url": "http://assembly.state.ny.us/leg/?sh=printbill&bn=S675&term=2025&Text=Y", "media_type": "text/html"}, {"url": "http://legislation.nysenate.gov/pdf/bills/2025/S675", "media_type": "application/pdf"}], "date": "", "classification": ""}], "documents": [], "citations": [{"publication": "New York Laws", "citation": "VAT \u00a7 1222-A", "citation_type": "proposed", "effective": null, "expires": null, "url": "https://www.nysenate.gov/legislation/laws/VAT/"}], "sources": [{"url": "https://legislatio
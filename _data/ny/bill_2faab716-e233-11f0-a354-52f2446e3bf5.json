{"legislative_session": "2025-2026", "identifier": "A3275", "title": "Establishes a housing court", "from_organization": "~{\"classification\": \"lower\"}", "classification": ["bill"], "subject": [], "abstracts": [{"note": "", "abstract": "Establishes a housing court for actions and proceedings involving the enforcement of state and local laws for the establishment and maintenance of housing standards; requires such court to establish an escrow account; provides that any landlord that owns twenty units or less shall be entitled to free legal services if such landlord can prove a loss of at least twenty percent of rent payments in a calendar year; makes related provisions."}], "other_titles": [], "other_identifiers": [], "actions": [{"description": "REFERRED TO JUDICIARY", "date": "2025-01-27", "organization_id": "~{\"classification\": \"lower\"}", "classification": ["referral-committee"], "related_entities": [{"name": "JUDICIARY", "entity_type": "organization", "organization_id": null}]}], "sponsorships": [{"name": "Clyde Vanel", "classification": "primary", "entity_type": "person", "primary": true, "person_id": "~{\"name\": \"Clyde Vanel\"}", "organization_id": null}, {"name": "Al Taylor", "classification": "cosponsor", "entity_type": "person", "primary": false, "person_id": "~{\"name\": \"Al Taylor\"}", "organization_id": null}, {"name": "Yudelka Tapia", "classification": "cosponsor", "entity_type": "person", "primary": false, "person_id": "~{\"name\": \"Yudelka Tapia\"}", "organization_id": null}, {"name": "Alicia Hyndman", "classification": "cosponsor", "entity_type": "person", "primary": false, "person_id": "~{\"name\": \"Alicia Hyndman\"}", "organization_id": null}], "related_bills": [{"identifier": "S 5122", "legislative_session": "2025-2026", "relation_type": "companion"}, {"identifier": "S 5122", "legislative_session": "2025-2026", "relation_type": "companion"}, {"identifier": "A 8598", "legislative_session": "2023-2024", "relation_type": "prior-session"}],